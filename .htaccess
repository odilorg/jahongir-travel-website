RewriteEngine On

# Allow robots.txt and sitemap.xml to pass through
RewriteRule ^(robots\.txt|sitemap\.xml)$ - [L]

# Pass through real files and directories (assets, images, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirect old .php URLs to clean URLs
RewriteCond %{THE_REQUEST} \s/+(.+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# All other requests go to router
RewriteRule ^(.*)$ router.php [L]